/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  box-sizing: border-box;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 0;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.header-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  opacity: 0.9;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.8;
}

.empty-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 图书列表 */
.book-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.book-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.book-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}

/* 图书封面容器 */
.book-cover-container {
  flex-shrink: 0;
  margin-right: 24rpx;
}

.book-cover {
  width: 120rpx;
  height: 160rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  background: #f5f5f5;
}

/* 图书信息 */
.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
}

.book-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.book-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-author {
  font-size: 26rpx;
  color: #666666;
}

.book-location {
  font-size: 24rpx;
  color: #999999;
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  width: fit-content;
}

/* 图书状态标签 */
.book-status {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
}

.book-status.avail {
  background: #e6f4ea;
  color: #1e8e3e;
}

.book-status.pend {
  background: #fff8e1;
  color: #f57f17;
}

.book-status.borrow {
  background: #ffebee;
  color: #c62828;
}

/* 删除按钮容器 */
.delete-btn-wrapper {
  flex-shrink: 0;
  margin-left: 16rpx;
}

.delete-btn {
  width: 140rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  font-size: 28rpx;
  background: linear-gradient(135deg, #f43f30 0%, #e33426 100%);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(244, 63, 48, 0.3);
  transition: all 0.3s ease;
}

.delete-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(244, 63, 48, 0.4);
}

.delete-btn[disabled] {
  opacity: 0.6;
  background: #cccccc;
  box-shadow: none;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #ffffff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}