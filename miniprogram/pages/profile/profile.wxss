.profile-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40rpx 0;
    background-color: white;
    margin-bottom: 20rpx;
  }
  
  .avatar {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    margin-bottom: 20rpx;
  }
  
  .nickname {
    font-size: 34rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  
  .role {
    font-size: 26rpx;
    color: #666;
    background-color: #f0f0f0;
    padding: 5rpx 15rpx;
    border-radius: 20rpx;
  }
  
  .info-form {
    background-color: white;
    padding: 20rpx 30rpx;
    border-radius: 10rpx;
    margin: 0 20rpx;
  }
  
  .form-item {
    display: flex;
    align-items: center;
    padding: 25rpx 0;
    border-bottom: 1px solid #f5f5f5;
  }
  
  .label {
    width: 160rpx;
    font-size: 28rpx;
    color: #333;
  }
  
  .form-item input {
    flex: 1;
    font-size: 28rpx;
    padding: 5rpx 0;
  }
  
  .save-btn {
    width: 100%;
    margin-top: 40rpx;
    padding: 15rpx 0;
    font-size: 30rpx;
  }
  
  .required-tip {
    color: #f43f30;
    font-size: 26rpx;
    text-align: center;
    margin-top: 30rpx;
  }