.search-bar {
    padding: 20rpx;
    background-color: white;
  }
  
  .search-bar input {
    background-color: #f5f5f5;
    padding: 15rpx 20rpx;
    border-radius: 8px;
    font-size: 28rpx;
  }
  
  .books-list {
    padding: 10rpx 20rpx;
  }
  
  .book-item {
    display: flex;
    align-items: center;
    background-color: white;
    border-radius: 10rpx;
    padding: 20rpx;
    margin-bottom: 15rpx;
    box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
  }
  
  .book-img {
    width: 120rpx;
    height: 160rpx;
    margin-right: 20rpx;
  }
  
  .book-info {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .book-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  
  .book-author {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 10rpx;
  }
  
  .book-status {
    font-size: 24rpx;
    padding: 3rpx 10rpx;
    border-radius: 4rpx;
    width: fit-content;
  }
  
  .status-available {
    background-color: #eaffea;
    color: #07c160;
  }
  
  .status-borrowed {
    background-color: #fff2f0;
    color: #f43f30;
  }
  
  .book-actions {
    display: flex;
    flex-direction: column;
    gap: 10rpx;
  }

  /* 新增借阅人信息样式 */
.book-borrower {
  font-size: 26rpx;
  color: #666;
  margin-top: 5rpx;
  padding-left: 2rpx;
}

/* 补充待审批状态样式 */
.status-pending {
  background-color: #fff8e6;
  color: #ff9800;
}