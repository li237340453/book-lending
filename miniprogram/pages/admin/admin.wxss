.tabs {
    display: flex;
    background-color: white;
    border-bottom: 1px solid #eee;
  }
  
  .tab {
    flex: 1;
    text-align: center;
    padding: 20rpx 0;
    font-size: 30rpx;
    position: relative;
  }
  
  .tab.active {
    color: #07c160;
    font-weight: bold;
  }
  
  .tab.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 4rpx;
    background-color: #07c160;
  }
  
  .badge {
    display: inline-block;
    background-color: #f43f30;
    color: white;
    font-size: 22rpx;
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 30rpx;
    margin-left: 10rpx;
  }
  
  .records-list {
    padding: 15rpx;
  }
  
  .record-item {
    background-color: white;
    border-radius: 10rpx;
    padding: 20rpx;
    margin-bottom: 15rpx;
    box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
  }
  
  .record-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 15rpx;
  }
  
  .record-type {
    font-size: 30rpx;
    font-weight: bold;
  }
  
  .record-time {
    font-size: 24rpx;
    color: #999;
  }
  
  .record-content {
    margin-bottom: 15rpx;
    display: flex;
    flex-direction: column;
    gap: 8rpx;
  }
  
  .record-content text {
    font-size: 26rpx;
    color: #666;
  }
  
  .record-status {
    padding: 3rpx 10rpx;
    border-radius: 4rpx;
    font-size: 24rpx;
    width: fit-content;
  }
  
  .status-approved {
    background-color: #eaffea;
    color: #07c160;
  }
  
  .status-rejected {
    background-color: #fff2f0;
    color: #f43f30;
  }
  
  .record-actions {
    display: flex;
    justify-content: flex-end;
    gap: 15rpx;
  }
  
  .empty {
    text-align: center;
    padding: 100rpx 0;
    color: #999;
    font-size: 28rpx;
  }